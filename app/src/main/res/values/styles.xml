<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Polaris" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="navigationIcon">@mipmap/plr_back_icon</item>
    </style>

    <style name="Theme.Polaris.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Polaris.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="Theme.Polaris.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Polaris.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- AppBarLayout样式 -->
    <style name="PolarisAppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Theme.Polaris.AppBarOverlay</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="elevation">0dp</item>
    </style>
    <!-- Toolbar样式 -->
    <style name="PolarisToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="popupTheme">@style/Theme.Polaris.PopupOverlay</item>
        <item name="titleTextColor">@color/black</item>
        <item name="navigationIcon">@mipmap/plr_back_icon</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.AppCompat.Caption"></style>

    <style name="BottomNavigationView.TextAppearance.Active">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationView.TextAppearance.InActive">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="PlrDialogNoBg" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>